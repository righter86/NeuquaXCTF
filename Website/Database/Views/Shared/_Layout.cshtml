<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Database</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/datatables.min.css" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    @* <link href="font-awesome/css/font-awesome.css" rel="stylesheet"> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#0F294A">
            <div class="container-fluid">                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/header_logo.jpg" style="width:143px;height:30px"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="font-weight:600">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="XC" asp-action="Index">XC Data</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Track Data</a>
                        </li>
                        <li class="nav-item" style="font-style:italic;font-weight:normal !important">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/Popper/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/metismenu/dist/jquery.metismenu.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* <script src="js/plugins/slimscroll/jquery.slimscroll.min.js"></script> *@
    <script src="~/lib/datatables/datatables.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   @*  <footer class="border-top footer text-muted" style="background-color:#f5f3f3">
        <div class="container">
            &copy; 2023 - NVXCTF - <a asp-area="" asp-controller="Home" asp-action="Privacy">Admin Login</a>
        </div>
    </footer> *@
  
</body>
</html>

